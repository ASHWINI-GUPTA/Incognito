@using Incognito.Views.Manage
@inject SignInManager<ApplicationUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<ul class="list-group list-group-flush">
    <li class="list-group-item" style="margin-bottom: -1px"><a asp-action="Index">Profile</a></li>
    <li class="list-group-item" style="margin-bottom: -1px"><a asp-action="ChangePassword">Password</a></li>
    @if (hasExternalLogins)
    {
        <li class="list-group-item" style="margin-bottom: -1px"><a asp-action="ExternalLogins">External logins</a></li>
    }
    <li class="list-group-item" style="margin-bottom: -1px"><a asp-action="TwoFactorAuthentication">Two-factor authentication</a></li>
</ul>