@model Incognito.Models.ProfileViewModel.PublicVM
@{
    ViewBag.Title = @ViewData["User"] + " Profile";
}

@{
    var twittername = Model.PublicProfile.Twitter;
    var twitter = $"https://twitter.com/{twittername}";
}

<div class="row">
    <div class="col-lg-4">
        <div class="card card-profile">
            <div class="card-header"></div>
            <div class="card-body text-center">
                <span class="avatar-main">@Model.PublicProfile.GetProfilePic()</span>
                <h3 class="mb-3">@Model.PublicProfile.GetFullName()</h3>
                <p class="mb-4">
                    @Model.PublicProfile.CompanyName
                </p>
                <ul class="social-links list-inline ">
                    @if (twittername != null)
                    {
                        <li class="list-inline-item">
                            <a href="@twitter" class="btn btn-outline-primary btn-sm" title="" data-toggle="tooltip" data-original-title="Twitter"><i class="fab fa-twitter"></i> Follow</a>
                        </li>
                    }
                    @*<li class="list-inline-item">
                            <a href="javascript:void(0)" class="btn btn-outline-danger btn-sm" title="" data-toggle="tooltip" data-original-title="Instagram"><i class="fab fa-instagram"></i> Follow</a>
                        </li>*@
                </ul>
            </div>
        </div>
    </div>
    <div class="col-lg-8">
        <div class="card text-center">
            <h5 class="card-header">Leave your message below.</h5>
            <div class="card-body">
                @{
                    var receiverId = ViewData["receiverId"];
                }

                <form asp-controller="Public" asp-action="Index">
                    <input type="hidden" asp-for="PublicMessage.ReceiverId" />
                    <div class="form-group">
                        <textarea asp-for="PublicMessage.Text" rows="6" class="form-control"></textarea>
                        <span asp-validation-for="PublicMessage.Text" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-paper-plane"></i> Send</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>