@model Incognito.Models.AdminViewModel.RoleVM
<form asp-controller="Admin" asp-action="Roles" method="post">
    <div class="row" style="padding-top: 20px;">
        <div class="col-sm-4 col-md-4">
            <div class="form-group">
                <input asp-for="AddRole.Name" class="form-control" placeholder="Add New Role">
                <span asp-validation-for="AddRole.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="col form-group">
            <button type="submit" class="btn btn-primary"><i class="fas fa-plus"></i> Add</button>
        </div>
    </div>
</form>